{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "check-type": false,
    "no-console": false,
    "indent": [false, "spaces", 2],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "trailing-comma": false,
    "triple-equals": false,
    "class-name": false,
    "comment-format": [true],
    "align": [true],
    "variable-name": false,
    "@typescript-eslint/camelcase": "off",
    "semicolon": false,
    "whitespace-before-colon": [false],
    "whitespace-after-colon": [false],
    "one-line": false,
    "max-line-length": [ false ],
    "arrow-parens": false,
    "no-this-assignment": [true, {"allowed-names": ["vueInst"], "allow-destructuring": true}],
    "@typescript-eslint/no-this-alias": [
      "warning",
      {
        "allowDestructuring": true, // Allow `const { props, state } = this`; false by default
        "allowedNames": ["vueInst"] // Allow `const self = this`; `[]` by default
      }
    ],
    "whitespace": [
      false
    ],
    "typedef-whitespace": [
      false,
      {

      },
      {

      }
    ]
  }
}
